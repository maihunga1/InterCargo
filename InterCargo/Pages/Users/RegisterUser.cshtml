@page
@model InterCargo.Pages.Users.RegisterUserModel
@{
    ViewData["Title"] = "Register";
}

<div class="container">
    <div class="row justify-content-center mt-5">
        <div class="col-md-8 col-lg-7">
            <div class="card shadow-sm">
                <div class="card-body p-4">
                    <div class="text-center mb-4">
                        <h2 class="fw-bold">Create Customer Account</h2>
                        <p class="text-muted">Please fill in your information to register</p>
                    </div>

                    @if (!string.IsNullOrEmpty(Model.SuccessMessage))
                    {
                        <div class="alert alert-success alert-dismissible fade show" role="alert">
                            @Model.SuccessMessage
                            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                        </div>
                    }

                    @if (!string.IsNullOrEmpty(Model.ErrorMessage))
                    {
                        <div class="alert alert-danger alert-dismissible fade show" role="alert">
                            @Model.ErrorMessage
                            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                        </div>
                    }

                    <form method="post" id="registrationForm">
                        <div class="row">
                            <div class="col-md-6">
                                <div class="form-group mb-3">
                                    <label asp-for="Input.Username" class="form-label">Username</label>
                                    <div class="input-group">
                                        <span class="input-group-text"><i class="bi bi-person"></i></span>
                                        <input asp-for="Input.Username" class="form-control"
                                            placeholder="Enter username" />
                                    </div>
                                    <span asp-validation-for="Input.Username" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group mb-3">
                                    <label asp-for="Input.Email" class="form-label">Email</label>
                                    <div class="input-group">
                                        <span class="input-group-text"><i class="bi bi-envelope"></i></span>
                                        <input asp-for="Input.Email" class="form-control" placeholder="Enter email" />
                                    </div>
                                    <span asp-validation-for="Input.Email" class="text-danger"></span>
                                </div>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-6">
                                <div class="form-group mb-3">
                                    <label asp-for="Input.Password" class="form-label">Password</label>
                                    <div class="input-group">
                                        <span class="input-group-text"><i class="bi bi-lock"></i></span>
                                        <input asp-for="Input.Password" class="form-control" type="password"
                                            placeholder="Enter password" id="passwordInput" />
                                    </div>
                                    <span asp-validation-for="Input.Password" class="text-danger"></span>
                                    <small class="form-text text-muted">
                                        Password must be at least 8 characters long and contain at least one uppercase
                                        letter, one lowercase letter, one number, and one special character.
                                    </small>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group mb-3">
                                    <label asp-for="Input.ConfirmPassword" class="form-label">Confirm Password</label>
                                    <div class="input-group">
                                        <span class="input-group-text"><i class="bi bi-lock-fill"></i></span>
                                        <input asp-for="Input.ConfirmPassword" class="form-control" type="password"
                                            placeholder="Confirm password" />
                                    </div>
                                    <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
                                </div>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-6">
                                <div class="form-group mb-3">
                                    <label asp-for="Input.FirstName" class="form-label">First Name</label>
                                    <div class="input-group">
                                        <span class="input-group-text"><i class="bi bi-person-vcard"></i></span>
                                        <input asp-for="Input.FirstName" class="form-control"
                                            placeholder="Enter first name" />
                                    </div>
                                    <span asp-validation-for="Input.FirstName" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group mb-3">
                                    <label asp-for="Input.FamilyName" class="form-label">Family Name</label>
                                    <div class="input-group">
                                        <span class="input-group-text"><i class="bi bi-person-vcard-fill"></i></span>
                                        <input asp-for="Input.FamilyName" class="form-control"
                                            placeholder="Enter family name" />
                                    </div>
                                    <span asp-validation-for="Input.FamilyName" class="text-danger"></span>
                                </div>
                            </div>
                        </div>

                        <div class="form-group mb-3">
                            <label asp-for="Input.PhoneNumber" class="form-label">Phone Number</label>
                            <div class="input-group">
                                <span class="input-group-text"><i class="bi bi-telephone"></i></span>
                                <input asp-for="Input.PhoneNumber" class="form-control"
                                    placeholder="Enter phone number" />
                            </div>
                            <span asp-validation-for="Input.PhoneNumber" class="text-danger"></span>
                        </div>

                        <div class="form-group mb-3">
                            <label asp-for="Input.CompanyName" class="form-label">Company Name (Optional)</label>
                            <div class="input-group">
                                <span class="input-group-text"><i class="bi bi-building"></i></span>
                                <input asp-for="Input.CompanyName" class="form-control"
                                    placeholder="Enter company name" />
                            </div>
                            <span asp-validation-for="Input.CompanyName" class="text-danger"></span>
                        </div>

                        <div class="form-group mb-4">
                            <label asp-for="Input.Address" class="form-label">Address</label>
                            <div class="input-group">
                                <span class="input-group-text"><i class="bi bi-geo-alt"></i></span>
                                <input asp-for="Input.Address" class="form-control" placeholder="Enter address" />
                            </div>
                            <span asp-validation-for="Input.Address" class="text-danger"></span>
                        </div>

                        <div class="d-grid gap-2">
                            <button type="submit" class="btn btn-primary btn-lg">Register</button>
                            <p class="text-center mt-3 mb-0">
                                Already have an account?
                                <a asp-page="/Users/LoginUser" class="text-primary text-decoration-none">Login here</a>
                            </p>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Password Validation Modal -->
<div class="modal fade" id="passwordValidationModal" tabindex="-1" aria-labelledby="passwordValidationModalLabel"
    aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="passwordValidationModalLabel">Password Requirements</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <div class="alert alert-danger">
                    <h6 class="alert-heading">Your password does not meet the requirements:</h6>
                    <ul class="mb-0" id="passwordErrorList">
                    </ul>
                </div>
                <div class="mt-3">
                    <h6>Password must meet all of these requirements:</h6>
                    <ul class="list-unstyled">
                        <li><i class="bi bi-check-circle-fill text-success"></i> At least 8 characters long</li>
                        <li><i class="bi bi-check-circle-fill text-success"></i> At least one uppercase letter</li>
                        <li><i class="bi bi-check-circle-fill text-success"></i> At least one lowercase letter</li>
                        <li><i class="bi bi-check-circle-fill text-success"></i> At least one number</li>
                        <li><i class="bi bi-check-circle-fill text-success"></i> At least one special character</li>
                    </ul>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-primary" data-bs-dismiss="modal">I Understand</button>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />

    <script>
        function checkPasswordRequirements(password) {
            return {
                length: password.length >= 8,
                upper: /[A-Z]/.test(password),
                lower: /[a-z]/.test(password),
                number: /[0-9]/.test(password),
                special: /[^A-Za-z0-9]/.test(password)
            };
        }

        $(document).ready(function () {
            $('#passwordInput').on('input', function () {
                var password = $(this).val();
                var req = checkPasswordRequirements(password);
                $('#pw-length').toggleClass('text-success', req.length).toggleClass('text-danger', !req.length)
                    .find('i').attr('class', req.length ? 'bi bi-check-circle-fill' : 'bi bi-x-circle');
                $('#pw-upper').toggleClass('text-success', req.upper).toggleClass('text-danger', !req.upper)
                    .find('i').attr('class', req.upper ? 'bi bi-check-circle-fill' : 'bi bi-x-circle');
                $('#pw-lower').toggleClass('text-success', req.lower).toggleClass('text-danger', !req.lower)
                    .find('i').attr('class', req.lower ? 'bi bi-check-circle-fill' : 'bi bi-x-circle');
                $('#pw-number').toggleClass('text-success', req.number).toggleClass('text-danger', !req.number)
                    .find('i').attr('class', req.number ? 'bi bi-check-circle-fill' : 'bi bi-x-circle');
                $('#pw-special').toggleClass('text-success', req.special).toggleClass('text-danger', !req.special)
                    .find('i').attr('class', req.special ? 'bi bi-check-circle-fill' : 'bi bi-x-circle');
            });

            // Handle form submission
            $('#registrationForm').on('submit', function (e) {
                var passwordError = $('.field-validation-error[data-valmsg-for="Input.Password"]').text();
                if (passwordError) {
                    e.preventDefault();

                    // Split the error message into individual requirements
                    var errors = passwordError.split('. ').filter(error => error.trim() !== '');

                    // Update the error list in the modal
                    var errorList = $('#passwordErrorList');
                    errorList.empty();
                    errors.forEach(function (error) {
                        errorList.append('<li>' + error + '</li>');
                    });

                    // Show the modal
                    var modal = new bootstrap.Modal(document.getElementById('passwordValidationModal'));
                    modal.show();
                }
            });

            // Redirect after successful registration
            @if (!string.IsNullOrEmpty(Model.SuccessMessage))
                {
                    <text>
                        setTimeout(function() {
                            window.location.href = '/Users/LoginUser';
                                                }, 3000);
                    </text>
            }
                });
    </script>
}
